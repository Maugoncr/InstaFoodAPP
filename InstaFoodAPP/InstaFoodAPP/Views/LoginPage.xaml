<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="InstaFoodAPP.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="app.jpg"
             >
    
    <ContentPage.Content>



        <StackLayout VerticalOptions="Center">




        <Button x:Name="BtnRestaurante" VerticalOptions="Center" Text="Restaurante" FontSize="Medium" CornerRadius="30" TextColor="White"
                    BackgroundColor="LimeGreen" BorderColor="White" BorderWidth="0.8" Clicked="BtnRestaurante_Clicked" Margin="25,0,25,0"/>


        <Button x:Name="BtnCliente" VerticalOptions="Center" Text="Cliente" FontSize="Medium" CornerRadius="30" BackgroundColor="#1577F8" 
                    BorderColor="White" BorderWidth="0.8" Clicked="BtnCliente_Clicked" Margin="25,0,25,0"/>





        </StackLayout>






    </ContentPage.Content>
</ContentPage>